    @*navbar for login user*@
    <nav class="navbar bg-dark">
        <h1>
            <a href="@Url.Action("../Home/Index")">
                <i class="fas fa-code"></i> DevHub
            </a>
        </h1>
        <ul>
            <li><a href="@Url.Action("Developers","Developers")">Developers</a></li>
            <li><a href="#">Posts</a></li>
            @if (User.IsInRole("Developer"))
            {
                <li>
                    <a href="@Url.Action("Dashboard","Home")">
                        <i class="fas fa-user"></i><span class="hide-sm"> Dashboard</span>
                    </a>
                </li>
            }

            @if (User.Identity.IsAuthenticated)
            {
                <li>
                    <a href="@Url.Action("Logout","Account")">
                        <i class="fas fa-sign-out-alt"></i><span class="hide-sm"> Logout</span>
                    </a>
                </li>
            }
            else
            {
                <li>
                    <a href="@Url.Action("Login","Account")">
                        <i class="fas fa-sign-in-alt"></i><span class="hide-sm"> Login</span>
                    </a>
                </li>
            }

        </ul>
    </nav>

    <a href="javascript:" id="return-to-top"><i class="fas fa-chevron-up"></i></a>


    @*darkmode button*@
    <div class="darkmode">
        <div class="tooltip">
            <div class="toggle"></div>
            <span class="tooltiptext">Dark Mode</span>
        </div>
    </div>

    @RenderBody()




    <script src="~/Scripts/devhubScripts/customScripts.js"></script>





</body>
</html>